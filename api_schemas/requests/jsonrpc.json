{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "request/jsonrpc",
  "title": "JSONRPC request protocol",
  "description": "Skeleton of the JSONRPC protocol.",
  "type": "object",
  "properties": {
    "id": {
      "description": "Unique identifier for a jsonrpc request",
      "type": "integer",
      "exclusiveMinimum": 0
    },
    "jsonrpc": {
      "description": "Version number of the jsonrpc protocol",
      "type": "string"
    },
    "method": {
      "description": "Method name.",
      "type": "string",
      "enum": [
        "search",
        "subscribe",
        "unsubscribe",
        "edit_subscription",
        "list_airports",
        "get_api_key",
        "list_subscriptions",
        "list_users",
        "admin_list_fetches",
        "admin_list_guest_subscriptions",
        "admin_list_user_subscriptions",
        "admin_list_users",
        "admin_subscribe",
        "admin_unsubscribe",
        "admin_remove_user",
        "admin_edit_user",
        "admin_edit_subscription",
        "admin_alter_user_credits",
        "senderror"
      ]
    },
    "params": {
      "description": "Method parameters.",
      "type": "object"
    }
  },
  "required": ["id", "jsonrpc", "method", "params"]
}
