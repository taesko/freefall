{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "request/search",
  "title": "Search API method request ",
  "description": "Body of the search API method sent from the client.",
  "type": "object",
  "properties": {
    "v": {
      "type": "string"
    },
    "fly_from": {
      "type": "string"
    },
    "fly_to": {
      "type": "string"
    },
    "price_to": {
      "type": "integer"
    },
    "date_from": {
      "type": "string"
    },
    "date_to": {
      "type": "string"
    },
    "sort": {
      "type": "string",
      "enum": ["price", "duration"]
    },
    "max_fly_duration": {
      "type": "integer"
    }
  }
}
