{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "response/credit_history",
  "title": "Body of the response of the credit_history API method sent TO the client.",
  "type": "object",
  "properties": {
    "status_code": {
      "type": "string"
    },
    "credit_history": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "transferred_at": {
            "type": "string",
            "format": "date-time"
          },
          "transfer_amount": {
            "type": "number"
          },
          "reason": {
            "type": "string",
            "enum": [
              "initial tax",
              "fetch tax"
            ]
          },
          "airport_from_id": {
            "type": "string"
          },
          "airport_to_id": {
            "type": "string"
          },
          "date_from": {
            "type": "string",
            "format": "date"
          },
          "date_to": {
            "type": "string",
            "format": "date"
          }
        },
        "required": [
          "id",
          "transferred_at",
          "transfer_amount",
          "reason",
          "airport_from_id",
          "airport_to_id",
          "date_from",
          "date_to"
        ]
      }
    },
    "deposit_history": {
      "type": "object",
      "properties": {
        "transferred_at": {
          "type": "string"
        },
        "transfer_amount": {
          "type": "number"
        },
        "reason": {
          "type": "string"
        }
      }
    }
  },
  "required": [
    "status_code"
  ]
}
