{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "response/credit_history",
  "title": "Body of the response of the credit_history API method sent TO the client.",
  "type": "object",
  "properties": {
    "status_code": {
      "type": "string"
    },
    "grouped_by": {
      "type": "object",
      "properties": {
        "active": {
          "type": "string",
          "const": "default"
        },
        "reason": {
          "type": "string",
          "const": "default"
        },
        "transferred_at": {
          "type": "string",
          "enum": ["year", "month", "day", "default"]
        }
      }
    },
    "credit_history": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "transferred_at": {
            "type": "string"
          },
          "transfer_amount": {
            "type": "number"
          },
          "reason": {
            "type": "string",
            "enum": [
              "initial tax",
              "fetch tax"
            ]
          },
          "airport_from_id": {
            "type": "string"
          },
          "airport_to_id": {
            "type": "string"
          },
          "date_from": {
            "type": "string",
            "format": "date"
          },
          "date_to": {
            "type": "string",
            "format": "date"
          },
          "active": {
            "type": "boolean"
          }
        }
      }
    }
  },
  "required": [
    "status_code"
  ]
}
