{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "response/deposit_history",
  "title": "Body of the response of the deposit_history API method sent TO the client.",
  "type": "object",
  "properties": {
    "status_code": {
      "type": "string"
    },
    "deposit_history": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "transferred_at": {
            "type": "string"
          },
          "transfer_amount": {
            "type": "number"
          },
          "reason": {
            "type": "string"
          }
        },
        "required": ["transferred_at", "transfer_amount", "reason"]
      }
    }
  }
}